@model ProjetoCEEM.ViewModels.PreCadastroViewModel

@{
    ViewBag.Title = "CreatePreCadastro";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <h2>CreatePreCadastro</h2>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h4>PreCadastroViewModel</h4>
            <hr/>
            @Html.ValidationSummary(true, "", new {@class = "text-danger"})
